<query id="getTextyleGuestbook" action="select">
    <tables>
        <table name="textyle_guestbook" alias="guestbook" />
    </tables>
    <columns>
        <column name="*" />
    </columns>
    <conditions>
        <condition operation="equal" column="textyle_guestbook_srl" var="textyle_guestbook_srl" filter="number" />
        <condition operation="equal" column="parent_srl" var="parent_srl" filter="number" pipe="and" />
    </conditions>
</query>
