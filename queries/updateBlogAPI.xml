<query id="updateBlogAPI" action="update">
    <tables>
        <table name="textyle_api" />
    </tables>
    <columns>
      <column name="blogapi_site_url" var="blogapi_site_url" notnull="notnull" />
      <column name="blogapi_site_title" var="blogapi_site_title" notnull="notnull" />
      <column name="blogapi_url" var="blogapi_url" notnull="notnull" />
      <column name="blogapi_user_id" var="blogapi_user_id" notnull="notnull" />
      <column name="blogapi_password" var="blogapi_password" notnull="notnull" />
    </columns>
    <conditions>
        <condition operation="equal" column="module_srl" var="module_srl" filter="number" notnull="notnull" />
        <condition operation="equal" column="api_srl" var="api_srl" filter="number" pipe="and" notnull="notnull" />
    </conditions>
</query>
